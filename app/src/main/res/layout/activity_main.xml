<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:gravity="center_horizontal|center_vertical">

        <Button     android:id="@+id/btTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_tipo"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:gravity="center_horizontal|center_vertical">

        <Button     android:id="@+id/btFamiliar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_familiar"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:gravity="center_horizontal|center_vertical">

        <Button     android:id="@+id/btExtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_extras"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:gravity="center_horizontal|center_vertical">

        <Button     android:id="@+id/btComentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_comentarios"/>

    </LinearLayout>

    <TextView   android:id="@+id/lblModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
